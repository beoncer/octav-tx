# Octav API Configuration
OCTAV_API_KEY=your_octav_api_key_here
OCTAV_BASE_URL=https://api.octav.fi

# Application Configuration
PORT=3000
NODE_ENV=development

# Reporting Configuration
REPORT_SCHEDULE="0 9 * * *"  # Daily at 9 AM
REPORT_OUTPUT_DIR=./reports
LOG_LEVEL=info
HIDE_SPAM=true  # Filter out spam transactions (set to false to include spam)
EXCLUDED_TRANSACTION_TYPES=CLAIM,BRIDGEIN,BRIDGEOUT,APPROVAL,INTERACTION,FAILED  # Transaction types to exclude (comma-separated, case-insensitive)

# Wallet Addresses to Monitor (comma-separated)
WALLET_ADDRESSES=0x1234567890abcdef,0xabcdef1234567890

# Notification Configuration (optional)
SLACK_WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=
EMAIL_USERNAME=
EMAIL_PASSWORD=
